# MirrorFlow Environment Configuration

# HuggingFace token (required for pyannote.audio)
HF_TOKEN=your_huggingface_token_here

# OpenAI API (for translation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Model settings
WHISPER_MODEL=large-v3
WHISPER_DEVICE=cuda
TTS_DEVICE=cuda

# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Video settings
MAX_VIDEO_DURATION=7200
FFMPEG_NVENC=true

# YouTube settings (optional, for auto-upload)
# Download OAuth credentials from Google Cloud Console
# and save to credentials/youtube_oauth.json
YOUTUBE_CREDENTIALS_FILE=credentials/youtube_oauth.json
YOUTUBE_TOKEN_FILE=credentials/youtube_token.json
